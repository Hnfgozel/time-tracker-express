{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Time Tracker Express API",
        "description": "Task Express Api",
        "contact": {
            "name": "Hanifi GÃ¶zel",
            "url": "https://github.com/Hnfgozel",
            "email": "gozel.hanifi@gmail.com"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Localhost"
        }
    ],
    "tags": [
        {
            "name": "Users",
            "description": "Users endpoints"
        },
        {
            "name": "tasks",
            "description": "tasks endpoints"
        }
    ],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/api/users": {
            "get": {
                "tags": ["Users"],
                "summary": "Get all users in database",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Users"
                        }
                    }
                }
            },
            "post": {
                "tags": ["Users"],
                "summary": "Create a new user",
                "requestBody": {
                    "description": "User Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/User"
                            }
                        }
                    }
                },
                "produces": ["application/json"],
                "responses": {
                    "201": {
                        "description": "OK New user created",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    },
                    "422": {
                        "description": "Failed to create user"
                    }
                }
            }
        },
        "/api/users/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "user ID",
                    "type": "string"
                }
            ],
            "delete": {
                "summary": "Delete user by id",
                "tags": ["Users"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "Delete user by id",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                }
            }
        },
        "/api/tasks": {
            "get": {
                "tags": ["tasks"],
                "summary": "Get all tasks in database",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/tasks"
                        }
                    }
                }
            }
        },
        "/api/tasks/start": {
            "post": {
                "tags": ["tasks"],
                "summary": "Create a new work",
                "requestBody": {
                    "description": "task Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/task"
                            }
                        }
                    }
                },
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "User not found",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    },
                    "201": {
                        "description": "OK New work created",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    },
                    "422": {
                        "description": "Please stop any not finished work"
                    }
                }
            }
        },
        "/api/tasks/stop": {
            "post": {
                "tags": ["tasks"],
                "summary": "Stop work",
                "requestBody": {
                    "description": "task Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/task"
                            }
                        }
                    }
                },
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "User not found / Work is already stopped",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    },
                    "422": {
                        "description": "Could not stop work"
                    }
                }
            }
        },
        "/api/tasks/export": {
            "post": {
                "tags": ["tasks"],
                "summary": "Export work data",
                "requestBody": {
                    "description": "task Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/task"
                            }
                        }
                    }
                },
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "OK / User not found / No work yet",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    },
                    "422": {
                        "description": "Missing username field"
                    }
                }
            }
        },
        "/api/tasks/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "task ID",
                    "type": "string"
                }
            ],
            "delete": {
                "summary": "Delete work by id",
                "tags": ["tasks"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "Delete work by id",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "id": {
            "properties": {
                "uuid": {
                    "type": "string"
                }
            }
        },
        "User": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "tasksRef": {
                    "type": "array"
                }
            }
        },
        "Users": {
            "type": "object",
            "properties": {
                "users": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/User"
                    }
                }
            }
        },
        "task": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                }
            }
        },
        "tasks": {
            "type": "object",
            "properties": {
                "tasks": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/task"
                    }
                }
            }
        }
    }
}
